{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Modifier profil{% endblock %}


{% block body %}
    {%  for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">

        {{ form_start(form) }}
        <h2 class="crTitle mt-5 mr-2 " style="display: inline-block;">Informations personnelles</h2>    <a href="{{ path('homepage') }}" class="btn rdcBtn">
            <span class="glyphicon glyphicon-chevron-left"></span>
            Retour
        </a>
        <hr>
       <div class="row">
           <div class="offset-lg-2 col-lg-3 userEdit">{{ form_row(form.first_name) }}</div>
           <div class="col-lg-3">{{ form_row(form.name) }}</div>
       </div>
        <div class="row mt-4">
            <div class="offset-lg-2 col-lg-6">{{ form_row(form.address) }}</div>
            <div class="offset-lg-2 col-lg-3 userEdit">{{ form_row(form.postcode) }}</div>
            <div class="col-lg-3">{{ form_row(form.city) }}</div>
        </div>
        <div class="row mt-4">
            <div class="offset-lg-2 col-lg-6">{{ form_row(form.pseudo) }}</div>
            <div class="offset-lg-2 col-lg-6">{{ form_row(form.phone) }}</div>
            <div class="offset-lg-2 col-lg-6">{{ form_row(form.email) }}</div>
            <div class="offset-lg-4 col-lg-6"><button class="btn rdcBtn pl-5 pr-5">Modifier</button></div>
        </div>
         {{ form_end(form) }}
    </div>





{% endblock %}