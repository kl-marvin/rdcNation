{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h1 class="mt-5 mb-4 crTitle">Créer votre profil bénévole avec le formulaire suivant :</h1>

        {{ form_start(form) }}
    <div class="row">
        <div class="offset-3 col-lg-3">{{ form_row(form.name) }}</div>
        <div class="col-lg-3">{{ form_row(form.firstName) }}</div>
    </div>
    <div class="row">
        <div class="offset-3 col-lg-6">{{ form_row(form.address) }}</div>
        <div class="offset-lg-3 col-lg-2">{{ form_row(form.postcode) }}</div>
        <div class="col-lg-4">{{ form_row(form.city) }}</div>
    </div>
    <div class="row">
        <div class="offset-3 col-lg-6">{{ form_row(form.pseudo) }}</div>
        <div class="offset-3 col-lg-6">{{ form_row(form.phone) }}</div>
        <div class="offset-3 col-lg-6">{{ form_row(form.email) }}</div>
        <div class="offset-3 col-lg-6">{{ form_row(form.password) }}</div>
    </div>

    <button class="btn rdcBtn offset-4 col-lg-4">Créer mon profil</button>
    {{ form_end(form) }}
</div>


{% endblock %}

{% block title %}

{% endblock %}

