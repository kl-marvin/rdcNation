{% extends 'base.html.twig' %}

{% block body %}



    <div class="container mt-5">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-12">
                    <h2 class="crTitle">Créer votre profil bénévole avec le formulaire suivant :</h2>
                    <hr>
                </div>
                <div class="row mt-5">
                        <div class="offset-lg-3 col-lg-3 offset-md-1 col-md-5 offset-1 col-8">{{ form_row(form.name) }}</div>
                        <div class="col-lg-3 col-md-5 offset-lg-0 offset-md-0 offset-1 col-8 ">{{ form_row(form.firstName) }}</div>
                    </div>
                <div class="row mt-2">
                    <div class="offset-lg-3 col-lg-6 offset-lg-3 offset-md-1 col-md-10 offset-md-1 offset-1 col-10 ">{{ form_row(form.address) }}</div>
                    <div class="offset-lg-3 col-lg-2  offset-md-1 col-md-3 offset-1 col-3">{{ form_row(form.postcode) }}</div>
                    <div class="col-lg-4 col-md-7 col-7">{{ form_row(form.city) }}</div>
                </div>
                <div class="row">
                    <div class="offset-lg-3 col-lg-3 offset-md-1 col-md-5 offset-1 col-8">{{ form_row(form.pseudo) }}</div>
                    <div class="col-lg-3 col-md-5 offset-lg-0 offset-md-0 offset-1 col-8">{{ form_row(form.phone) }}</div>
                </div>
                <div class="row mt-2">
                    <div class="offset-lg-3 col-lg-6 offset-md-1 col-md-10 offset-1 col-10">{{ form_row(form.email) }}</div>
                    <div class="offset-lg-3 col-lg-6 offset-md-1 col-md-10 offset-1 col-10">{{ form_row(form.password) }}</div>
                </div>
                <div class="row mt-5">
                    <div class="btn rdcBtn offset-lg-4 col-lg-4 offset-md-3 col-md-6 offset-3 col-6">Créer mon profil</div>
                </div>


            </div>
        </div>
        {{ form_end(form) }}


    </div>







{% endblock %}

{% block title %}

{% endblock %}

